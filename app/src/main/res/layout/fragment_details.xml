<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView
                android:id="@+id/view_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="rrrrrrrr"
                android:hint="id"
                android:textSize="30dp"
                android:layout_margin="20dp"/>

        <TextView
                android:id="@+id/view_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ertyh"
                android:hint="user"

                android:textSize="30dp"
                android:layout_margin="20dp"/>

        <TextView
                android:id="@+id/view_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ertyh gfgdfg hgfjhfh dfgf hjm,jm,,hj, jklkhjgyu"
                android:textSize="30dp"
                android:hint="text"
                android:layout_margin="20dp"/>

        <TextView
                android:id="@+id/view_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ertyh gfgdfg"
                android:textSize="20dp"
                android:hint="source"

                android:layout_margin="20dp"/>

        <TextView
                android:id="@+id/view_updatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ertyh gfgdfg"
                android:textSize="20dp"
                android:hint="updatedAt"
                android:layout_margin="20dp"/>

        <TextView
                android:id="@+id/view_createdAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ertyh gfgdfg"
                android:hint="createdAt"
                android:textSize="20dp"
                android:layout_margin="20dp"/>


    </LinearLayout>


</ScrollView>